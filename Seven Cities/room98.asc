function room_Load()

{
#ifdef TESTING
  if (CheckPoints.IsJumping()) { //we're in debug and we arrived in this room using the "jump to checkpoint" button
    CheckPoints.JumpDone();
  }
  #endif

  Mouse.Mode = eModeWalkto;
  PlayerUI.EnableAndShow();
  Mouse.Visible = true;
}



