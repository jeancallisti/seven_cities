{
  #ifdef TESTING
  if (CheckPoints.IsJumping()) {
    CheckPoints.JumpDone();
    
    if(CheckPoints.RequestedCheckpoint(eRoom_05_06_Excavation)) {
      player.x = 300;
      player.y = 230;
    }
  }
  #endif
   
  PlayerUI.EnableAndShow(); 
  
  //Lock scrolling
  SmoothScroll_SetEdges(132, 452, 90, 310);
}


