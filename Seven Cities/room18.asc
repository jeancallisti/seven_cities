  WAIT_30
  
  oHand.SetView(INDYHAND, 0);
  oHand.Animate(0, 4, eOnce, eNoBlock);
  
  WAIT_100
  player.SayAt(235, 30, 100, "... This stone artifact was discovered in my class dig.");
    
