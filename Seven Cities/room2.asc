      //Indy is immediately facing the students
    } else {
      After_IndyClassCutscene();
    }
    


  } else {
    cutscene_beforeStudentsPuzzle(); //in case we arrived straight from another checkpoint in a different room
  }
  #endif
  
  #ifndef TESTING
  cutscene_beforeStudentsPuzzle();
  #endif
